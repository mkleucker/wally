<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="wally.MainWindow"
        Title="Wally" Loaded="WindowLoaded" Closing="WindowClosing">
    <Grid x:Name="myGrid" Height="480" Width="640"  Background="Transparent">
        
        

        <Canvas x:Name="myCanvas" Background="Transparent">
            <Image x:Name="MyImage"/>
        </Canvas>
        <TextBlock x:Name ="myTimer" FontSize="40" Canvas.Left="558" Foreground="White" Margin="580,0,0,0"/>

        <Canvas x:Name="ColorCanvas">
            <Ellipse Margin="10,10,541,384" Stroke="Black" Width="100" Height="100" Fill="White" />
            <Ellipse Margin="10,127,541,267" Stroke="Black" Width="100" Height="100" Fill="Yellow" />
            <Ellipse Margin="10,247,541,147" Stroke="Black" Width="100" Height="100" Fill="Red" />
            <Ellipse Margin="10,362,541,32" Stroke="Black" Width="100" Height="100" Fill="Blue" /> 
        </Canvas>

        <Image x:Name="MaskedColor" Width="640" Height="480" Stretch="UniformToFill" />
    </Grid>
</Window>
