<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="wally.MainWindow"
        Title="Wally" Loaded="WindowLoaded" Closing="WindowClosing" KeyDown="KeyDownEventHandler">
    <Grid x:Name="myGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">
        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="0.25" ></ScaleTransform>
        </Grid.LayoutTransform>
        


        <Canvas x:Name="myCanvas" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image x:Name="MyImage" Stretch="Fill"/>
        </Canvas>
        <TextBlock x:Name ="myTimer" FontSize="40"
                   Width="100" Height="40" Foreground="White" />
        <Image x:Name="MaskedColor" Stretch="Fill" />
        <Image x:Name="Image1"/>
        <Image x:Name="Image2"/>
    </Grid>
</Window>
